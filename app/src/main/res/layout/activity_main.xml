<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#4EB295"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimercado la 43"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inventario"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#4EB295"/>

            <Button
                android:id="@+id/btnUpdateProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingresar Producto"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#4EB295"/>

            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nuevo Producto"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#4EB295"/>

            <Button
                android:id="@+id/btnRegisterSale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrar Salida"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#4EB295"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© 2025 Minimercado la 43. todos los derechos reservados."
        android:textAlignment="center"
        android:padding="8dp"
        android:background="#4EB295"
        android:textColor="@android:color/white"/>

</LinearLayout>
